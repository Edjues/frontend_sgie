generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model permiso {
  id          BigInt       @id @default(autoincrement())
  codigo      String
  descripcion String
  rolpermiso  rolpermiso[]
}

model rol {
  id          BigInt       @id @default(autoincrement())
  descripcion String       @unique
  rolpermiso  rolpermiso[]
  usuario     usuario[]
}

model rolpermiso {
  id        BigInt  @id @default(autoincrement())
  rolId     BigInt
  permisoId BigInt
  permiso   permiso @relation(fields: [permisoId], references: [id])
  rol       rol     @relation(fields: [rolId], references: [id])

  @@unique([rolId, permisoId])
}

model transaccion {
  id        BigInt   @id @default(autoincrement())
  monto     Decimal  @db.Decimal(18, 2)
  tipo      String
  fecha     DateTime @default(now()) @db.Timestamptz(6)
  usuarioId BigInt
  usuario   usuario  @relation(fields: [usuarioId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model usuario {
  id             BigInt        @id @default(autoincrement())
  rolid          BigInt
  nombrecompleto String
  email          String        @unique
  telefono       String?
  estado         Boolean       @default(true)
  createdAt      DateTime      @default(now()) @db.Timestamptz(6)
  createdAtT     DateTime      @default(now()) @db.Timestamptz(6)
  transaccion    transaccion[]
  rol            rol           @relation(fields: [rolid], references: [id], onDelete: SetNull, onUpdate: NoAction)
}
